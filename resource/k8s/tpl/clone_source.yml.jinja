{%- macro clone_source(gitlab_token, gitlab_url, git_branch) -%}
name: clone-source
image: alpine/git
args:
  - clone
  - "https://github.com/vitorsrg/cern-ssms-func-tests.git"
  - --branch
  - "{{ git_branch }}"
  - --single-branch
  - --depth
  - "1"
  - /mnt/func_tests/
resources:
  requests:
    memory: "1Gi"
    cpu: "1"
  limits:
    memory: "4Gi"
    cpu: "2"
volumeMounts:
  - name: func-tests-src
    mountPath: /mnt/func_tests/
{%- endmacro -%}
