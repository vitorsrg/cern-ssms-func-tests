{% from "./resource/k8s/tpl/clone_source.yml.jinja" import clone_source %}

################################################################################

apiVersion: v1
kind: Pod
metadata:
  name: always-succeeds
spec:
  restartPolicy: Never
  containers:
    - name: main
      image: bash:5.0.17
      command: [/usr/local/bin/bash]
      args:
        - "{{ source_path }}./func_test/always_succeeds/main.sh"
      env:
        - name: source_path
          value: "{{ source_path }}"
      resources:
        requests:
          memory: "1Gi"
          cpu: "500m"
        limits:
          memory: "4Gi"
          cpu: "1"
      volumeMounts:
        - name: func-tests-src
          mountPath: "{{ source_path }}"
  initContainers:
    - {{
          clone_source(
              gitlab_token, gitlab_url, git_branch, source_path)
          | indent(6, False)
      }}
  volumes:
    - name: func-tests-src
      emptyDir: {}
