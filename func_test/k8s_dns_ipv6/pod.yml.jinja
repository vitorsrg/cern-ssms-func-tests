{% from "./resource/k8s/tpl/clone_source.yml.jinja" import clone_source %}

################################################################################

apiVersion: v1
kind: Pod
metadata:
  name: k8s-dns-ipv4
spec:
  restartPolicy: Never
  activeDeadlineSeconds: 120
  containers:
    - name: main
      image: gitlab-registry.cern.ch/cloud/rally-magnum-containers/kubectl:v1.22.2
      imagePullPolicy: IfNotPresent
      workingDir: "{{ source_path }}"
      command: ["/bin/bash"]
      args:
        - "./func_test/k8s_dns_ipv6/main.sh"
      env:
        - name: source_path
          value: "{{ source_path }}"
      resources:
        requests:
          memory: "1Gi"
          cpu: "500m"
        limits:
          memory: "4Gi"
          cpu: "1"
      volumeMounts:
        - name: func-tests-src
          mountPath: "{{ source_path }}"
          readOnly: true
  initContainers:
    - {{
          clone_source(
              gitlab_token, gitlab_url, git_branch, source_path)
          | indent(6, False)
      }}
  volumes:
    - name: func-tests-src
      emptyDir: {}
